apiVersion: tekton.dev/v1beta1
kind: Task
metadata:
  name: npm-task
spec:
  description: |-
    This task can be used to run npm goals on a project where package.json is present and has some pre-defined npm scripts.
  params:
    - default: .
      description: The path where package.json of the project is defined.
      name: PATH_CONTEXT
      type: string
    - default:
        - version
      description: The npm goals you want to run.
      name: ARGS
      type: array
    - default: 'registry.access.redhat.com/ubi9/nodejs-20:latest'
      description: The node image you want to use.
      name: IMAGE
      type: string
  steps:
    - args:
        - $(params.ARGS)
        - '--cache'
        - $(workspaces.npm-cache.path)
        - '--userconfig'
        - $(workspaces.npmrc.path)/.npmrc
      command:
        - npm
      resources:
        limits:
          cpu: '2'
          memory: 2Gi
        requests:
          cpu: '1'
          memory: 1Gi
      env:
        - name: CI
          value: 'true'
      image: $(params.IMAGE)
      name: npm-run
      workingDir: $(workspaces.source.path)/$(params.PATH_CONTEXT)
  workspaces:
    - name: source
    - name: npm-cache
    - name: npmrc
