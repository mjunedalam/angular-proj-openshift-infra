package com.aramco.easd.agwa.integrations.service;

import com.aramco.easd.agwa.integrations.providers.CurrentDateProvider;
import com.aramco.easd.agwa.integrations.dto.EmailApiPayload;
import com.aramco.easd.agwa.integrations.dto.EmailRequest;
import com.aramco.easd.agwa.integrations.template.MorningReportTemplate;
import io.quarkus.runtime.annotations.RegisterForReflection;
import jakarta.enterprise.context.ApplicationScoped;
import jakarta.inject.Inject;
import jakarta.inject.Named;
import org.apache.camel.Exchange;

import java.util.Collections;
import java.util.Map;

@ApplicationScoped
@RegisterForReflection
@Named("emailPayloadBuilder")
public class EmailPayloadBuilder {

    @Inject
    MorningReportTemplate morningReportTemplate;

    @Inject
    CurrentDateProvider currentDateProvider;

    public EmailApiPayload buildPayload(Exchange exchange) throws Exception {

        EmailRequest request = exchange.getIn().getBody(EmailRequest.class);
        Map<String, Object> tmplData = request.getTemplateData();
        tmplData.put("currentDateProvider", currentDateProvider);
        String htmlContent = morningReportTemplate.render(tmplData).render();
        EmailApiPayload payload = new EmailApiPayload();
        payload.setFromAddress(request.getFrom());
        payload.setTo(request.getTo());
        payload.setCc(request.getCc() != null ? request.getCc() : Collections.emptyList());
        payload.setSubject(request.getSubject());
        payload.setContent(htmlContent);
        return payload;
    }
}
