# kustomization.yaml
apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

resources:
  - frontend-configmap.yaml
  - nginx-configmap.yaml
  - deployment.yaml
  - service.yaml

commonLabels:
  app: agwa-frontend
  app.kubernetes.io/name: agwa-frontend
  app.openshift.io/runtime: nginx
  app.kubernetes.io/part-of: agwa-frontend

labels:
  - pairs:
      app.kubernetes.io/version: 0.0.1-SNAPSHOT

images:
  - name: agwa-frontend
    newName: image-registry.openshift-image-registry.svc:5000/easd-agwa-dev/agwa-frontend
    digest: "sha256:201bf0bd260b18ba93fb1fc2f139da71cc6bd618c75204e292d9e4262f08d683"

replicas:
  - name: agwa-frontend
    count: 1
