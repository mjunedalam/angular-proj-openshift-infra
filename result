<div class="well-slider-container">
  <button 
    mat-icon-button 
    (click)="store.navigatePrev()" 
    [disabled]="store.selectedWellId() === store.wells()[0]?.epANum"
    class="nav-btn"
  >
    <mat-icon>keyboard_arrow_left</mat-icon>
  </button>

  <mat-chip-listbox aria-label="Well selection" class="horizontal-chip-list">
    @for (well of visibleWells(); track well.epANum) {
      <mat-chip-option
        [selected]="well.epANum === selectedWellId()"
        (click)="onWellSelect(well)"
        class="well-chip"
      >
        @if (well.epANum === selectedWellId()) {
          <mat-icon matChipAvatar>check</mat-icon>
        }
        {{ well.wGnrName }}
      </mat-chip-option>
    }
  </mat-chip-listbox>

  <button 
    mat-icon-button 
    (click)="store.navigateNext()" 
    [disabled]="store.selectedWellId() === store.wells()[store.wells().length - 1]?.epANum"
    class="nav-btn"
  >
    <mat-icon>keyboard_arrow_right</mat-icon>
  </button>
</div>

