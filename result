apiVersion: apps/v1
kind: Deployment
metadata:
  name: agwa-integrations
spec:
  replicas: 1
  template:
    metadata:
      annotations:
        sidecar.istio.io/inject: "true"
    spec:
      containers:
        - name: agwa-integrations
          image: agwa-integrations
          imagePullPolicy: IfNotPresent
          ports:
            - name: http
              containerPort: 8080
              protocol: TCP
          livenessProbe:
            httpGet:
              path: /q/health/live
              port: http
              scheme: HTTP
            timeoutSeconds: 1
            periodSeconds: 10
            successThreshold: 1
            failureThreshold: 3
          readinessProbe:
            httpGet:
              path: /q/health/ready
              port: http
              scheme: HTTP
            timeoutSeconds: 1
            periodSeconds: 10
            successThreshold: 1
            failureThreshold: 3
          startupProbe:
            httpGet:
              path: /q/health/started
              port: http
              scheme: HTTP
            timeoutSeconds: 1
            periodSeconds: 10
            successThreshold: 1
            failureThreshold: 3
          envFrom:
            - secretRef:
                name: agwa-integrations-datasource-credentials-secret
            - configMapRef:
                name: datasource-configmap
          env:
            - name: oracle.jdbc.javaNetNio
              value: "false"

            # --- SSL CONFIGURATION (PEM MODE) ---
            # Points to the raw cert file
            - name: QUARKUS_HTTP_SSL_CERTIFICATE_TRUST_STORE_FILE
              value: "/deployments/certs/ocpa.cert"
            
            # Tells Quarkus to read it as a text-based certificate
            - name: QUARKUS_HTTP_SSL_CERTIFICATE_TRUST_STORE_FILE_TYPE
              value: "PEM"
            
            # No password is required for PEM files
            - name: QUARKUS_HTTP_SSL_CERTIFICATE_TRUST_STORE_PASSWORD
              value: ""

          volumeMounts:
            - name: ocpa-cert-vol
              mountPath: "/deployments/certs"
              readOnly: true

          resources:
            limits:
              cpu: 100m
              memory: 150Mi
            requests:
              cpu: 50m
              memory: 110Mi

      volumes:
        - name: ocpa-cert-vol
          configMap:
            # Must match the name of the ConfigMap you created
            name: ocpa-cert-config
