apiVersion: apps/v1
kind: Deployment
metadata:
  name: agwa-integrations
spec:
  replicas: 1
  template:
    metadata:
      annotations:
        sidecar.istio.io/inject: "true"
    spec:
      containers:
        - name: agwa-integrations
          image: agwa-integrations
          imagePullPolicy: IfNotPresent
          ports:
            - name: http
              containerPort: 8080
              protocol: TCP
          # ... (Probes kept as is) ...
          envFrom:
            - secretRef:
                name: agwa-integrations-datasource-credentials-secret
            - configMapRef:
                name: datasource-configmap
          env:
            - name: oracle.jdbc.javaNetNio
              value: "false"

            # 1. QUARKUS CONFIG (Primary for Native & Quarkus components)
            - name: QUARKUS_HTTP_SSL_CERTIFICATE_TRUST_STORE_FILE
              value: "/deployments/certs/truststore.jks"
            - name: QUARKUS_HTTP_SSL_CERTIFICATE_TRUST_STORE_PASSWORD
              value: "changeit"
            - name: QUARKUS_HTTP_SSL_CERTIFICATE_TRUST_STORE_FILE_TYPE
              value: "JKS"

            # 2. JAVA STANDARD CONFIG (Safety net for JVM mode & legacy libs)
            - name: JAVA_TOOL_OPTIONS
              value: "-Djavax.net.ssl.trustStore=/deployments/certs/truststore.jks -Djavax.net.ssl.trustStorePassword=changeit"

          volumeMounts:
            - name: ocpa-cert-vol
              mountPath: "/deployments/certs"
              readOnly: true

          resources:
            limits:
              cpu: 100m
              memory: 150Mi
            requests:
              cpu: 50m
              memory: 110Mi

      volumes:
        - name: ocpa-cert-vol
          secret:
            secretName: ocpa-secret-agwa-int-service
